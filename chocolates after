using System;using System.Linq.Expressions;class Program{static void Main(){Console.WriteLine("средства: ");int a = Convert.ToInt32(Console.ReadLine());Console.WriteLine("необходимые средств ");int b = Convert.ToInt32(Console.ReadLine());Console.WriteLine("обертки ");int c = Convert.ToInt32(Console.ReadLine());if (c == 1){Console.WriteLine("OSHIBKA");}int totalChocolates = CalculateMaxChocolates(a, b, c);Console.WriteLine("ИТОГ: " + totalChocolates);}static int CalculateMaxChocolates(int a, int b, int c){int ch = a / b;int w = ch;while (w >= c){ int n = w / c;ch = ch + n;w = n + (w% c);}return ch;}}
